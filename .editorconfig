# EditorConfig - Cross-editor code style configuration file
# EditorConfig - 跨编辑器的代码风格配置文件
# More info: https://editorconfig.org

# Top-level EditorConfig file
# 顶级配置文件
root = true

# Default settings for all files
# 所有文件的默认配置
[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true

# PowerShell script files (.ps1, .psm1, .psd1)
# PowerShell 脚本文件
[*.{ps1,psm1,psd1}]
charset = utf-8-bom
indent_style = space
indent_size = 4
end_of_line = crlf

# Markdown files
# Markdown 文件
[*.md]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
end_of_line = lf

# JSON files
# JSON 文件
[*.json]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf

# YAML files
# YAML 文件
[*.{yml,yaml}]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf

# XML files
# XML 文件
[*.{xml,csproj,props}]
charset = utf-8
indent_style = space
indent_size = 2

# Batch files
# 批处理文件
[*.{cmd,bat}]
charset = utf-8
end_of_line = crlf

# Shell scripts
# Shell 脚本
[*.sh]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
